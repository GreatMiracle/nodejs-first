<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/homeStyles.css">
  <title>Create User</title>
</head>

<body>

  <div class="topnav">
    <a href="/web/v1">Home</a>
    <a class="active" href="/web/v1/user-management">User Managment</a>
    <a href="/web/v1/list-users">User</a>
    <a href="#about">About</a>
  </div>

  <% if (typeof userId=='undefined' ) { %>

    <div>
      <form action="/web/v1/create-user" method="POST">
        <fieldset>
          <legend>Add new User:</legend>
          <label for="fname">Full name:</label>
          <input type="text" id="fnameId" name="fname"><br><br>
          <label for="email">Email:</label>
          <input type="email" id="emailId" name="email"><br><br>
          <label for="address">Address:</label>
          <input type="text" id="addressId" name="address"><br><br>

          <!-- <label  for="birthday">Birthday:</label>
          <input  type="date" id="birthdayId" name="birthday"><br><br> -->
          <input type="submit" value="Submit">
        </fieldset>
      </form>
    </div>
    <% } else { %>
      <div>
        <form action="/web/v1/update-user/<%= userId %>" method="POST">
          <fieldset>
            <legend>Edit new User:</legend>
            <label for="fname">Full name:</label>
            <input type="text" id="fnameId" name="fname" value="<%= results.name %>"><br><br>
            <label for="email">Email:</label>
            <input type="email" id="emailId" name="email" value="<%= results.email %>"><br><br>
            <label for="address">Address:</label>
            <input type="text" id="addressId" name="address" value="<%= results.city %>"><br><br>
            <input type="submit" value="Submit">
          </fieldset>
        </form>
      </div>
      <% } %>

</body>

</html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="/css/styles.css">
	<link rel="stylesheet" href="/css/homeStyles.css">
	<link rel="stylesheet" href="/css/listUserStyles.css">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	<title>List User</title>
</head>

<body>
	<style>
		/* Đảm bảo các nút bên trong một hàng (row) nằm trên cùng một dòng */
		.row-buttons {
			display: flex;
			/* Hiển thị các phần tử con trên cùng một hàng */
			align-items: center;
			/* Canh chỉnh các phần tử con theo chiều dọc */
		}

		/* Tạo khoảng cách giữa nút "Update" và nút "Delete" */
		.row-buttons .btn {
			margin-right: 10px;
		}
	</style>
	<div class="topnav">
		<a href="/web/v1">Home</a>
		<a href="/web/v1/user-management">User Managment</a>
		<a class="active" href="/web/v1/list-users">User</a>
		<a href="#about">About</a>
	</div>
	<br></br>
	<h2 style="text-align: center;">User Details</h2>
	<table class="styled-table">
		<thead>
			<tr>
				<th>Full Name</th>
				<th>Email</th>
				<th>Address</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			<% for (const user of users) { %>

				<tr>
					<!-- <td><%= user.id %></td> -->
					<td>
						<%= user.name %>
					</td>
					<td>
						<%= user.email %>
					</td>
					<td>
						<%= user.city %>
					</td>
					<td class="row-buttons">

						<a class="btn btn-info" href="/web/v1/edit-user/<%= user.id %>">Update</a>
						<!-- <a class="btn btn-danger" style="margin-left: 10px;"
							href="/web/v1/delete-user/<%= user.id %>">Delete</a> -->
						<form action="/web/v1/delete-user/<%= user.id %>" method="POST">
							<button type="submit" class="btn btn-danger" style="margin-left: 10px;">Delete</button>
						</form>

					</td>
				</tr>
				<% } %>
		</tbody>
	</table>

</body>

</html>
	<h2 style="text-align: center;">User Details</h2>
	<table class="styled-table">
		<thead>
			<tr>
				<th>Full Name</th>
				<th>Email</th>
				<th>Address</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			<% for (const user of users) { %>

				<tr>
					<!-- <td><%= user.id %></td> -->
					<td>
						<%= user.name %> 
					</td>
					<td>
						<%= user.email %>
					</td>
					<td>
						<%= user.address %>
					</td>
					<td>
						<button class="btn btn-info" onclick="getDetailUser(<%= user.id %>)">Update</button>
						<button class="btn btn-danger" style="margin-left: 10px;">Delete</button>
					</td>
				</tr>
				<% } %>
		</tbody>
	</table>
